{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artikel</h1>
<style>
    table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
    th, td {
    padding: 5px;
    text-align: left;    
}
</style>
    <table style="width:15%">
        <tbody>
            <tr>
                <th>Naam</th>
                <td>{{ artikel.naam }}</td>
            </tr>
            <tr>
                <th>Omschrijving</th>
                <td>{{ artikel.omschrijving }}</td>
            </tr>
            <tr>
                <th>Technischespecificatie</th>
                <td>{{ artikel.technischeSpecificatie }}</td>
            </tr>
            <tr>
                <th>Inkoopprijs</th>
                <td>{{ artikel.inkoopprijs }}</td>
            </tr>
            <tr>
                <th>Minimalevoorraad</th>
                <td>{{ artikel.minimaleVoorraad }}</td>
            </tr>
            <tr>
                <th>Aantalvooraad</th>
                <td>{{ artikel.aantalVoorraad }}</td>
            </tr>
            <tr>
                <th>Bestelserie</th>
                <td>{{ artikel.bestelserie }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ artikel.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('alleartikelen') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('artikelwijzigen', { 'id': artikel.id }) }}">Edit</a>
        </li>
       <!-- <li>
          {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>-->
    </ul>
{% endblock %}
